<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:src="@drawable/baseline_clear_24"
                android:padding="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Child Policies"
                android:textColor="@color/blackText"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/roboto_bold"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in"
            android:textColor="@color/blackText"
            android:layout_below="@+id/header"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_below="@+id/tvDesc"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#ebf5ff"
                        android:text="Infant"
                        android:gravity="center"
                        android:textColor="#0159b4"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_16sdp"
                        android:layout_height="@dimen/_50sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:text="is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:textColor="@color/blackText"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#b9f8df"
                        android:text="Child"
                        android:textColor="#147772"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_16sdp"
                        android:layout_height="@dimen/_50sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:text="is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/blackText"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:elevation="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#ffebbe"
                        android:text="Adult"
                        android:textColor="#cb7f03"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="@dimen/_16sdp"
                        android:layout_height="@dimen/_50sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:text="is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/blackText"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>